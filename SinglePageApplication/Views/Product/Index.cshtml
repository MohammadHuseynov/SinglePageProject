@{
    ViewData["Title"] = "Product Management";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Management</h1>

    </div>

    <div class="card mb-4">

        <div class="card-header">

            <h3>Product</h3>

            <div class="button-group float-start">

                <button type="button" class="btn btn-primary" id="btnAdd">Save</button>

                <button style="background-color: #FFFF00; color: black;" type="button" class="btn btn-secondary" id="btnEdit">Edit</button>

                <button style="background-color: #FF0000;" type="button" class="btn btn-tertiary" id="btnDelete">Delete</button>

                <button style="background-color: #808080; color: white; " type="button" class="btn btn-quaternary ms-2" id="btnRefresh">Refresh List</button>

            </div>


        </div>
        <div class="card-body">
            <form id="productForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Product Title</label>
                    <input type="text" class="form-control" id="title" required />
                    <div id="titleValidation" class="invalid-feedback"></div>
                </div>

                <div class="mb-3">
                    <label for="unitPrice" class="form-label">Unit Price</label>
                    <input type="number" class="form-control" id="unitPrice" step="0.01" required />
                    <div id="unitPriceValidation" class="invalid-feedback"></div>
                </div>

            </form>
        </div>
    </div>

    <div id="userFeedback" class="mb-2"></div>


    <h3>Product List</h3>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th></th>
                <th>Title</th>
                <th>Unit Price</th>
            </tr>
        </thead>
        <tbody id="productTableBody">
        </tbody>
    </table>

</div>

@section Scripts {
    <script src="~/js/product.js" asp-append-version="true"></script>
}